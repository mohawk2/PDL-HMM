 $alpha = hmmfw($a,$b,$pi,    $o);
 $beta  = hmmbw($a,$b,$omega, $o);

 ##-----------------------------------------------------
 ## Parameter Estimation

 ($ea,$eb,$epi,$eomega) = hmmexpect0($a,$b,$pi,$omega);       ##-- initialize

 hmmexpect($a,$b,$pi,$omega, $o,$alpha,$beta, $ea,$eb,$epi);  ##-- expect

 ($a,$b,$pi,$omega) = hmmmaximize($ea,$eb,$epi,$eomega);      ##-- maximize

 ##-----------------------------------------------------
 ## Sequence Analysis

 ($delta,$psi) = hmmviterbi($a,$b,$pi, $o);     ##-- trellis

 $paths = hmmpath($psi, sequence($T));          ##-- backtrace

=cut

