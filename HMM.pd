 ##-----------------------------------------------------
 ## Dimensions

 $N = $number_of_states;
 $M = $number_of_symbols;
 $T = $length_of_input;

 ##-----------------------------------------------------
 ## Parameters

 $a  = log(random($N,$N));
 $b  = log(random($N,$M));
 $pi = log(random($N));
 $omega = log(random($N));

 $o  = long(rint($M*random($T)));

